<div class="col-lg-3 col-md-4 col-sm-6 justify-content-center">
  <%= link_to profile, class: 'text-secondary' do %>
  <%= image_tag profile.medium_avatar, class: 'img-thumbnail' %>
  <div class="h4"><%= profile.display_name %></div>
  <% end %>
  <div>
    <%= profile.age %> <%= t '.years_old' %>
  </div>
  <div>
    <% if profile.city.present? %>
      <%= profile.city.country %>
      <%= profile.city.city %>
    <% end %>
  </div>
</div>
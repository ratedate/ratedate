<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Hide surname</th>
      <th>Nickname</th>
      <th>Avatar</th>
      <th>Dob</th>
      <th>Hide dob</th>
      <th>Gender</th>
      <th>About</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.surname %></td>
        <td><%= profile.hide_surname %></td>
        <td><%= profile.nickname %></td>
        <td><%= profile.avatar %></td>
        <td><%= profile.dob %></td>
        <td><%= profile.hide_dob %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.about %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


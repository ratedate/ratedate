<h2><%= t('.forgot_your_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "devise-form" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group mx-auto d-block">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
  </div>

  <div class="actions">
    <%= f.submit t('.send_me_reset_password_instructions'), class: "btn btn-secondary mb-3  mx-auto d-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<div class="forgot show">
<p class="forgot-title"><%= t('.forgot_your_password') %></p>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "devise-form" }) do |f| %>
  <%= devise_error_messages! %>

  <p class="input">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
  </p>

  <div class="center">
    <%= f.submit 'Send reset link', class: "round-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
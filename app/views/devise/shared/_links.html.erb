
<% if request.subdomain == "ico" %>

    <%- if controller_name != 'sessions' %>
        <%= link_to t(".sign_in"), ico_sign_in_path(:locale => I18n.locale), class: "link underline medium instructions" %><br />
    <% end -%>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to t(".sign_up"), ico_sign_up_path(:locale => I18n.locale), class: "link underline medium instructions" %><br />
    <% end -%>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
        <%= link_to t(".forgot_your_password"), new_password_path(resource_name), class: "link underline medium instructions" %><br />
    <% end -%>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to t('.didn_t_receive_confirmation_instructions'), new_confirmation_path(resource_name), class: "link underline medium instructions" %><br />
    <% end -%>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        <%= link_to t('.didn_t_receive_unlock_instructions'), new_unlock_path(resource_name), class: "link underline medium instructions" %><br />
    <% end -%>
    <div class="small">By clicking Sign Up, I confirm that I am not U.S., China or Singapore citizen, I do not have a primary residence or domicile in the U.S., in China or in Singapore and I am not currently on the territory of those countries nor I am transferring cryptocurrency on behalf of such person or entity.</div>
<% else %>
  <%- if controller_name != 'sessions' %>
    <%= link_to t(".sign_in"), sign_in_path(:locale => I18n.locale), class: "link underline medium instructions" %><br />
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t(".sign_up"), sign_up_path(:locale => I18n.locale), class: "link underline medium instructions" %><br />
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <%= link_to t(".forgot_your_password"), new_password_path(resource_name), class: "link underline medium instructions" %><br />
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to t('.didn_t_receive_confirmation_instructions'), new_confirmation_path(resource_name), class: "link underline medium instructions" %><br />
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to t('.didn_t_receive_unlock_instructions'), new_unlock_path(resource_name), class: "link underline medium instructions" %><br />
  <% end -%>

  <%- if devise_mapping.omniauthable?&&request.subdomain!="ico"&&2==3 %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to t('.sign_in_with_provider', provider: provider.to_s.titleize), omniauth_authorize_path(resource_name, provider), class: "link underline medium instructions" %><br />
    <% end -%>
  <% end -%>
<% end %>


<div class="side-form">
    <div class="side-form-head">
      <span class="logo icon-logo"></span>
      <a id="hide-menu" class="close-menu" href="javascript:void(0)">
        <span class="fa fa-times"></span>
      </a>
    </div>

    <div class="login signup show">
      <p class="trigger">
        <a href="javascript:void(0)" class="left">Log In</a>
        <a href="javascript:void(0)" class="right">Sign Up</a>
      </p>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= devise_error_messages! %>
      <%= flash[:recaptcha_error] %>
      <div class="login-form active">
        <%= form_for(:user, as: resource_name, url: session_path(resource_name)) do |f| %>
            <p class="input">
              <%= f.email_field :email, autofocus: true, placeholder: "E-mail"   %>
            </p>

            <p class="input">
              <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
            </p>

            <% if devise_mapping.rememberable? %>
                <p class="checkbox">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </p>
            <% end %>

            <div class="center">
              <%= f.submit t('.sign_in'), class: 'round-btn' %>
            </div>
            <%= link_to 'Forgot Your Password?', new_password_path(resource_name), class: "link underline medium instructions" %>
            <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "link underline medium instructions" %>

        <% end %>
      </div>

      <div class="signup-form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

            <%= f.hidden_field :referred_by, :value => session[:referred_by] %>
            <p class="input">
              <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
            </p>

            <p class="input">
              <%= f.password_field :password, autocomplete: "off",  placeholder: "Password" %>
            </p>

            <p class="input">
              <%= f.password_field :password_confirmation, autocomplete: "off",  placeholder: "Repeat password" %>
            </p>
            <div class="captcha">
              <div class="captcha-wrap">
                <!-- INSERT CAPTCHA HERE -->
                <%= recaptcha_tags %>
              </div>
            </div>
            <div class="center">
              <%= f.submit t('sign_up'), class: 'round-btn' %>
            </div>
        <% end %>
        <%= link_to 'Forgot Your Password?', new_password_path(resource_name), class: "link underline medium instructions" %>
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "link underline medium instructions" %>

      </div>
    </div>

    <div class="check-mail">
      <span class="check-mail-icon"></span>
      <p class="check-mail-text">
        Thanks! Check your mail
        and follow instructions!
      </p>

      <div class="center">
        <button type="button" class="round-btn">Go to Log In</button>
      </div>
    </div>

    <div class="forgot">
      <p class="forgot-title">Forgot your password?</p>
      <p class="input">
        <input type="text" name="email" placeholder="E-mail" />
      </p>
      <div class="center">
        <button type="submit" class="round-btn">Send reset link</button>
      </div>
      <div class="center">
        <a class="link underline" href="javascript:void(0)">Log In</a>
        <a class="link underline" href="javascript:void(0)">Sign Up</a>
      </div>
    </div>


    <div class="info-links">
      <a class="link" href="javascript:void(0)" data-modal-target="#terms-of-use">Terms of Use</a>
      <a class="link" href="javascript:void(0)" data-modal-target="#privacy-policy">Policy</a>
    </div>

    <p class="info-text">
      RateDate © 2018
    </p>
</div>


<div>
  <% profile = conversation.with(current_user).profile %>
  <% html_class = 'conversation d-flex' %>
  <% if local_assigns[:current_conversation]
       html_class += ' current' if conversation.id == current_conversation
     end
  %>
  <%= link_to(conversation_path(conversation), class: html_class, id: 'conversation-'+conversation.id.to_s) do %>
    <%= image_tag profile.avatar.url(:small_avatar), class: 'rounded-circle' %>
    <div class="pl-2">
      <%= profile.name+' '+profile.surname %><br>
      <em><%= conversation.personal_messages.last.body.truncate(50) %></em>
    </div>
  <% end %>
</div>